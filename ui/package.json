{
  "name": "@eyss/invitations",
  "version": "0.0.1",
  "description": "TODO: change description",
  "author": "guillem.cordoba@gmail.com",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "concurrently --kill-others --names rollup,web-dev-server \"npm run build-watch\" \"web-dev-server --config demo/web-dev-server.config.mjs\"",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build-watch": "rollup -w -c rollup.config.js",
    "test": "rollup && web-test-runner --coverage --puppeteer",
    "test-debug": "rollup && DEBUG=true web-test-runner --coverage --puppeteer",
    "test-watch": "web-test-runner --watch --puppeteer",
    "e2e": "CONDUCTOR_URL=ws://localhost:8888 concurrently -k -s first \"npm:test\" \"npm:start-holochain\"",
    "analyze": "wca analyze src --format json --outFile custom-elements.json",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "storybook": "concurrently -k --names rollup,storybook \"npm run build-watch\" \"start-storybook --node-resolve --watch --open\"",
    "build-storybook": "npm run analyze && build-storybook",
    "publish-storybook": "npm run lint && npm run analyze && npm run build&& npm run build-storybook && gh-pages -d storybook-static",
    "publish-to-branch": "npm run lint && npm run build && gh-pages -d ./ -b ui-build"
  },
  "dependencies": {
    "@holochain-open-dev/cell-client": "^0.0.5",
    "@holochain-open-dev/core-types": "^0.1.1",
    "@holochain-open-dev/profiles": "github:holochain-open-dev/profiles#ui-build",
    "@holochain/conductor-api": "^0.2.1",
    "@lit-labs/context": "github:holochain-open-dev/context#build",
    "@open-wc/scoped-elements": "^2.0.0-next.5",
    "@scoped-elements/material-web": "^0.0.4",
    "cqfill": "^0.6.0",
    "lit": "^2.0.0-rc.4",
    "lit-svelte-stores": "^0.1.3"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@web/dev-server": "^0.1.7",
    "@web/dev-server-rollup": "^0.3.2",
    "@web/test-runner": "^0.12.15",
    "@web/test-runner-puppeteer": "^0.6.4",
    "buffer": "^5.6.0",
    "concurrently": "^5.1.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.23.0",
    "es-dev-server-rollup": "0.0.8",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^1.0.0",
    "json-parse-better-errors": "^1.0.2",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-postcss-lit": "^1.1.1",
    "tslib": "^1.11.0",
    "typescript": "4.3.5",
    "web-component-analyzer": "^1.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
