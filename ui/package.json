{
  "name": "@eyss/invitations",
  "version": "0.0.1",
  "description": "TODO: change description",
  "author": "guillem.cordoba@gmail.com",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start-alice": "HC_PORT=8888 concurrently -k --names ui,hc \"npm run start-ui\" \"npm run start-holochain\"",
    "start-bob": "HC_PORT=8889 concurrently -k --names ui,hc \"npm run start-ui\" \"npm run start-holochain\"",
    "start-ui": "concurrently --kill-others --names tsc,web-dev-server \"npm run build-watch\" \"sleep 5 && web-dev-server --config demo/web-dev-server.config.mjs\"",
    "start-holochain": "RUST_LOG=warn hc s generate -r=$HC_PORT ../zome/workdir/happ/invitations.happ network -b https://bootstrap-staging.holo.host quic",
    "build": "rimraf dist && tsc",
    "build-watch": "tsc --watch",
    "test": "tsc && web-test-runner --coverage --puppeteer",
    "test-debug": "tsc && DEBUG=true web-test-runner --coverage --puppeteer",
    "test-watch": "web-test-runner --watch --puppeteer",
    "e2e": "CONDUCTOR_URL=ws://localhost:8888 concurrently -k -s first \"npm:test\" \"npm:start-holochain\"",
    "analyze": "wca analyze src --format json --outFile custom-elements.json",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "storybook": "concurrently -k --names tsc,storybook \"npm run build-watch\" \"start-storybook --node-resolve --watch --open\"",
    "build-storybook": "npm run analyze && build-storybook",
    "publish-storybook": "npm run lint && npm run analyze && npm run build&& npm run build-storybook && gh-pages -d storybook-static",
    "publish-to-branch": "npm run lint && npm run build && cp package.json dist && gh-pages -d dist -b ui-build"
  },
  "dependencies": {
    "@adobe/lit-mobx": "^2.0.0-rc.4",
    "@holochain-open-dev/cell-client": "git+https://github.com/holochain-open-dev/cell-client.git#build",
    "@holochain-open-dev/context": "git+https://github.com/holochain-open-dev/context.git#ui-build",
    "@holochain-open-dev/core-types": "git+https://github.com/holochain-open-dev/core-types.git#build",
    "@holochain-open-dev/profiles": "git+https://github.com/holochain-open-dev/profiles.git#ui-build",
    "@holochain/conductor-api": "0.0.4",
    "lit": "^2.0.0-rc.2",
    "mobx": "^6.3.2"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@web/dev-server": "^0.1.7",
    "@web/dev-server-rollup": "^0.3.2",
    "@web/test-runner": "^0.12.15",
    "@web/test-runner-puppeteer": "^0.6.4",
    "buffer": "^5.6.0",
    "concurrently": "^5.1.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.23.0",
    "es-dev-server-rollup": "0.0.8",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "gh-pages": "^3.1.0",
    "holochain-ui-test-utils": "github:guillemcordoba/holochain-ui-test-utils",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.46.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "tslib": "^1.11.0",
    "typescript": "~3.9.0",
    "web-component-analyzer": "^1.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
